<!DOCTYPE html>

<script>
    function showAlert(titleText, contentText, typeText, makeBr, eventAction) {
        if (typeText == null) {
            typeText = 'red'
        }
        if (makeBr == true) {
            contentText = makeBreakes(contentText);
        }

        $.confirm({
            escapeKey: 'tryAgain',
            title: titleText,
            content: contentText,
            type: typeText,
            typeAnimated: true,
            buttons: {
                tryAgain: {
                    text: 'OK',
                    keys: ['escape'],
                    btnClass: 'btn-orange',
                    action: function () {
                        if (eventAction != null) {
                            eventAction();
                        }
                        return true;
                    }
                }
            }
        });
    }
   
</script>

<style>
    .pointer {
         cursor: pointer!important; 
    }
</style>

<html>
<head>
    <meta charset="utf-8" />
    @RenderSection("viewPort", required: false)
